<!DOCTYPE html>
<html>
<head>
    <title>Request Event</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            color: #7d8562;
            margin-top: 20px;
        }
        form {
            width: 50%;
            margin: 20px auto;
            padding: 25px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #7d8562;
        }
        input, select, button {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }
        input:focus, select:focus {
            border-color: #7d8562;
            outline: none;
            box-shadow: 0 0 5px rgba(125, 133, 98, 0.5);
        }
        input[type="checkbox"], input[type="radio"], input[type="range"] {
            width: auto;
            margin-right: 10px;
        }
        input[type="range"] {
            -webkit-appearance: none;
            appearance: none;
            height: 8px;
            background: #ddd;
            border-radius: 5px;
            cursor: pointer;
        }
        input[type="range"]::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 16px;
            height: 16px;
            background: #7d8562;
            border-radius: 50%;
            cursor: pointer;
        }
        input[type="range"]::-moz-range-thumb {
            width: 16px;
            height: 16px;
            background: #7d8562;
            border-radius: 50%;
            cursor: pointer;
        }
        button {
            background-color: #7d8562;
            color: white;
            font-size: 16px;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #6d774f;
        }
        .radio-group label {
            display: inline-block;
            margin-right: 20px;
        }
        .range-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .range-container input[type="range"] {
            width: 90%;
        }
        .range-output {
            width: 40px;
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Request Event</h1>

    <form action="/submitEventRequest" method="POST">
        <!-- Event Date -->
        <label for="eventdate">Event Date</label>
        <input type="date" id="eventdate" name="eventdate" required>

        <label for="eventtime">Event Start Time</label>
        <input type="time" id="eventtime" name="eventtime" required>

        <!-- Event Address -->
        <label for="proposedeventaddress">Event Address</label>
        <input type="text" id="proposedeventaddress" name="proposedeventaddress" required
        style="text-transform: uppercase;"oninput="this.value = this.value.toUpperCase()">

        <!-- Zip Code -->
        <label for="zipcode">Zip Code</label>
        <input type="text" id="zipcode" name="zipcode" pattern="\d{5}" title="Please enter a valid 5-digit ZIP code" required>

        <!-- Estimated Attendance -->
        <label for="estimatedattendance">Estimated Attendance</label>
        <div class="range-container">
            <input 
                type="range" 
                id="estimatedattendance" 
                name="estimatedattendance" 
                min="0" 
                max="500" 
                step="5" 
                value="0" 
                oninput="this.nextElementSibling.value = this.value"
            >
            <output class="range-output">0</output>
        </div>

        <!-- Activity Type -->
        <label>Activity Type</label>
        <div class="radio-group">
            <label>
                <input type="radio" name="activitytype" value="Sewing"> Sewing
            </label>
            <label>
                <input type="radio" name="activitytype" value="NoSewing" checked> No Sewing
            </label>
            <label>
                <input type="radio" name="activitytype" value="Both"> Both
            </label>
        </div>

        <!-- Contact First Name -->
        <label for="contactfirstname">Contact First Name</label>
        <input type="text" id="contactfirstname" name="contactfirstname" required
        style="text-transform: uppercase;"oninput="this.value = this.value.toUpperCase()">

        <!-- Contact Last Name -->
        <label for="contactlastname">Contact Last Name</label>
        <input type="text" id="contactlastname" name="contactlastname" required
        style="text-transform: uppercase;"oninput="this.value = this.value.toUpperCase()">

        <!-- Contact Phone -->
        <label for="contactphone">Contact Phone</label>
        <input type="tel" id="contactphone" name="contactphone" pattern="^\d{10}$" title="Please enter a valid 10-digit phone number" required>

        <!-- Contact Email -->
        <label for="contactemail">Contact Email</label>
        <input type="email" id="contactemail" name="contactemail" required
        style="text-transform: uppercase;"oninput="this.value = this.value.toUpperCase()">

        <!-- Jen Story Request -->
        <label for="jenstoryrequest">
            <input type="checkbox" id="jenstoryrequest" name="jenstoryrequest" value="Y">
            Hear Jen's Story At the Start of the Event
        </label>

        <button type="submit">Submit Request</button>
    </form>
</body>
</html>