<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <style>
    /* Global Styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
    }

    .dashboard-container {
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 1200px;
      overflow-y: auto;
      margin-top: 20px;
    }

    h1,
    h2 {
      color: #495057;
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: left;
    }

    /* Table Styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
      font-size: 0.85rem;
    }

    th,
    td {
      padding: 0.5rem;
      text-align: left;
      border: 1px solid #e9ecef;
    }

    th {
      background-color: #6c757d;
      color: #ffffff;
      text-transform: uppercase;
      font-size: 0.85rem;
      position: sticky;
      top: 0;
      z-index: 2;
    }

    td a {
      color: #007bff;
      text-decoration: none;
    }

    td a:hover {
      text-decoration: underline;
    }

    /* Scrollable Table Body */
    .table-container {
      max-height: 400px;
      /* Adjust height as needed */
      overflow-y: auto;
      margin-bottom: 1rem;
    }

    /* Button Styles */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .button {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease, color 0.3s ease;
      text-decoration: none;
      display: inline-block;
      text-align: center;
    }

    .button.add {
      background-color: #a3a69a;
      /* Light green-gray */
      color: #ffffff;
    }

    .button.edit {
      background-color: #8f9775;
      /* Medium sage green */
      color: #ffffff;
    }

    .button.delete {
      background-color: #6b8e23;
      /* Olive green */
      color: #ffffff;
    }

    .button.save {
      background-color: #8f9775;
      /* Dark olive green */
      color: #ffffff;
    }

    .button.complete {
      background-color: #556b2f;
      /* Medium sage green */
      color: #ffffff;
    }

    .button:hover {
      opacity: 0.85;
    }

    .button:focus {
      outline: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      table {
        font-size: 0.8rem;
      }

      th,
      td {
        padding: 0.4rem;
      }

      .button {
        font-size: 0.75rem;
      }
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <!-- Admin Management Section -->
    <h2>Manage Admins</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Admin ID</th>
            <th>Name</th>
            <th>Username</th>
            <th>Password</th>
            <th>Contact Info</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% admins.forEach(function(admin, index) { %>
            <% if (index < 5) { %>
              <tr>
                <td>
                  <%= admin.adminid %>
                </td>
                <td>
                  <%= admin.name %>
                </td>
                <td>
                  <%= admin.username %>
                </td>
                <td>
                  <%= admin.password %>
                </td>
                <td>
                  <a href="mailto:<%= admin.email %>">
                    <%= admin.email %>
                  </a><br>
                  <%= admin.phonenumber %>
                </td>
                <td>
                  <div class="action-buttons">
                    <a href="/editAdmin/<%= admin.adminid %>" class="button edit">Edit</a>
                    <form action="/deleteAdmin/<%= admin.adminid %>" method="POST" style="display: inline;">
                      <button type="submit" class="button delete"
                        onclick="return confirm('Are you sure you want to delete this admin?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } else { %>
                <tr style="display: none;">
                  <!-- Hidden rows beyond the first 5 -->
                  <!-- You can keep this empty or include the data -->
                </tr>
                <% } %>
                  <% }); %>
        </tbody>
      </table>
    </div>
    <button onclick="window.location.href='/addAdmin'" class="button add">Add New Admin</button>

    <!-- Volunteer Management Section -->
    <h2>Manage Volunteers</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Volunteer ID</th>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Sewing Level</th>
            <th>Monthly Hours</th>
            <th>Heard About Opportunity</th>
            <th>Zip Code</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% volunteers.forEach(function(volunteer, index) { %>
            <% if (index < 5) { %>
              <tr>
                <td>
                  <%= volunteer.volunteerid %>
                </td>
                <td>
                  <%= volunteer.name %>
                </td>
                <td>
                  <a href="mailto:<%= volunteer.email %>">
                    <%= volunteer.email %>
                  </a><br>
                  <%= volunteer.phone %>
                </td>
                <td>
                  <%= volunteer.sewinglevel %>
                </td>
                <td>
                  <%= volunteer.monthlyhours %>
                </td>
                <td>
                  <%= volunteer.heardaboutopportunity %>
                </td>
                <td>
                  <%= volunteer.zipcode %>
                </td>
                <td>
                  <div class="action-buttons">
                    <a href="/editVolunteer/<%= volunteer.volunteerid %>" class="button edit">Edit</a>
                    <form action="/deleteVolunteer/<%= volunteer.volunteerid %>" method="POST" style="display: inline;">
                      <button type="submit" class="button delete"
                        onclick="return confirm('Are you sure you want to delete this volunteer?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } else { %>
                <tr style="display: none;">
                  <!-- Hidden rows beyond the first 5 -->
                </tr>
                <% } %>
                  <% }); %>
        </tbody>
      </table>
    </div>
    <button onclick="window.location.href='/volunteer/add'" class="button add">Add New Volunteer</button>

    <!-- Event Requests Section -->
    <h2>Event Requests</h2>
    <!-- Removed the form tag as we no longer need it for auto-saving -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Request ID</th>
            <th>Date/Time</th>
            <th>Estimated Attendance</th>
            <th>Type</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Hear Jen's Story</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% eventRequests.forEach(function(request, index) { %>
            <% if (index < 5) { %>
              <tr>
                <td>
                  <%= request.requestid %>
                </td>
                <td>
                  <%= request.eventdatetime %>
                </td>
                <td>
                  <%= request.estimatedattendance %>
                </td>
                <td>
                  <%= request.activitytype %>
                </td>
                <td>
                  <strong>
                    <%= request.name %>
                  </strong><br>
                  <a href="mailto:<%= request.contactemail %>">
                    <%= request.contactemail %>
                  </a><br>
                  <%= request.contactphone %>
                </td>
                <td>
                  <%= request.proposedeventaddress %><br>
                    <%= request.city %>, <%= request.state %>
                        <%= request.zipcode %>
                </td>
                <td>
                  <%= request.jenstoryrequest ? "Yes" : "No" %>
                </td>
                <td>
                  <select name="status_<%= request.requestid %>" class="status-dropdown"
                    data-request-id="<%= request.requestid %>">
                    <option value="Pending" <%=request.eventreqstatus==="Pending" ? "selected" : "" %>>Pending</option>
                    <option value="Approved" <%=request.eventreqstatus==="Approved" ? "selected" : "" %>>Approved
                    </option>
                  </select>
                </td>
                <td>
                  <div class="action-buttons">
                    <!-- Edit button -->
                    <a href="/editReq/<%= request.requestid %>" class="button edit">Edit</a>
                    <!-- Complete button -->
                    <a href="/updateEvent/<%= request.requestid %>" class="button complete"
                      onclick="return confirm('Mark this request as completed?')">Complete</a>
                    <form action="/deleteEventReq/<%= request.requestid %>" method="POST" style="display: inline;">
                      <button type="submit" class="button delete"
                        onclick="return confirm('Are you sure you want to decline this event request?')">Decline</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } else { %>
                <tr style="display: none;">
                  <!-- Hidden rows beyond the first 5 -->
                </tr>
                <% } %>
                  <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Events Section -->
    <h2>Events</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Event ID</th>
            <th>Event Date</th>
            <th>Address</th>
            <th>Total Participants</th>
            <th>Pockets</th>
            <th>Collars</th>
            <th>Envelopes</th>
            <th>Vests</th>
            <th>Total Items Produced</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(function(event, index) { %>
            <% if (index < 5) { %>
              <tr>
                <td>
                  <%= event.eventid %>
                </td>
                <td>
                  <%= event.eventdate %>
                </td>
                <td><%- event.fulladdress %></td>
                <td>
                  <%= event.totalparticipants %>
                </td>
                <td>
                  <%= event.pockets %>
                </td>
                <td>
                  <%= event.collars %>
                </td>
                <td>
                  <%= event.envelopes %>
                </td>
                <td>
                  <%= event.vests %>
                </td>
                <td>
                  <%= event.total_items_produced %>
                </td>
                <td>
                  <%= event.eventstatus %>
                </td>
                <td>
                  <div class="action-buttons">
                    <a href="/editEvent/<%= event.eventid %>" class="button edit">Edit</a>
                    <form action="/deleteEvent/<%= event.eventid %>" method="POST" style="display: inline;">
                      <button type="submit" class="button delete"
                        onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
              <% } else { %>
                <tr style="display: none;">
                  <!-- Hidden rows beyond the first 5 -->
                </tr>
                <% } %>
                  <% }); %>
        </tbody>
      </table>
    </div>
    <!-- Add Event Button -->
    <button type="button" onclick="window.location.href='/addEvent'" class="button add">Add New Event</button>
  </div>

  <!-- JavaScript to handle the status dropdown change -->
  <script>
    document.querySelectorAll(".status-dropdown").forEach((dropdown) => {
      dropdown.addEventListener("change", function () {
        const requestId = this.getAttribute("data-request-id");
        const newStatus = this.value;

        fetch(`/updateEventStatus/${requestId}`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ status: newStatus }),
        })
          .then((response) => {
            if (response.ok) {
              alert("Status updated successfully!");
            } else {
              alert("Failed to update status. Please try again.");
            }
          })
          .catch((error) => {
            console.error("Error updating status:", error);
            alert("An error occurred. Please try again.");
          });
      });
    });
  </script>
</body>

</html>