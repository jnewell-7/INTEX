<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f0f0f0;
      margin: 0;
    }

    .dashboard-container {
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 1200px;
      text-align: center;
      overflow-y: auto;
      max-height: 90vh;
    }

    h1,
    h2 {
      color: #7d8562;
      font-weight: 700;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 1.5rem 0;
      font-size: 0.9rem;
    }

    th,
    td {
      padding: 0.75rem;
      text-align: left;
      border: 1px solid #d0d0d0;
    }

    th {
      background-color: #7d8562;
      color: #ffffff;
    }

    .button {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
      color: #ffffff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .button.add {
      background-color: #28a745;
      margin-bottom: 1rem;
    }

    .button.edit {
      background-color: #ffc107;
    }

    .button:hover {
      opacity: 0.9;
    }

    select {
      padding: 0.5rem;
      border: 1px solid #d0d0d0;
      border-radius: 4px;
      font-size: 0.9rem;
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <!-- Admin Management Section -->
    <h2>Manage Admins</h2>
    <table>
      <thead>
        <tr>
          <th>Admin ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% admins.forEach(function(admin) { %>
          <tr>
            <td><%= admin.adminid %></td>
            <td><%= admin.username %></td>
            <td><%= admin.password %></td>
            <td><%= admin.firstname %></td>
            <td><%= admin.lastname %></td>
            <td><%= admin.email %></td>
            <td><%= admin.phonenumber %></td>
            <td>
              <!-- Edit Admin Button -->
              <a href="/editAdmin/<%= admin.adminid %>" class="button edit">Edit</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/admin/add'" class="button add">Add New Admin</button>

    <!-- Event Requests Section -->
    <h2>Event Requests</h2>
    <form action="/updateEventStatus" method="POST">
      <table>
        <thead>
          <tr>
            <th>Request ID</th>
            <th>Event Date</th>
            <th>Zip Code</th>
            <th>Estimated Attendance</th>
            <th>Activity Type</th>
            <th>Contact First Name</th>
            <th>Contact Last Name</th>
            <th>Contact Email</th>
            <th>Contact Phone</th>
            <th>Proposed Event Address</th>
            <th>Jen Story Request</th>
            <th>Event Request Status</th>
          </tr>
        </thead>
        <tbody>
          <% eventRequests.forEach(function(request) { %>
            <tr>
              <td><%= request.requestid %></td>
              <td><%= request.eventdate %></td>
              <td><%= request.zipcode %></td>
              <td><%= request.estimatedattendance %></td>
              <td><%= request.activitytype %></td>
              <td><%= request.contactfirstname %></td>
              <td><%= request.contactlastname %></td>
              <td><%= request.contactemail %></td>
              <td><%= request.contactphone %></td>
              <td><%= request.proposedeventaddress %></td>
              <td><%= request.jenstoryrequest ? "Yes" : "No" %></td>
              <td>
                <!-- Dropdown for Event Request Status -->
                <select name="status_<%= request.requestid %>">
                  <option value="Pending" <%= request.eventreqstatus === "Pending" ? "selected" : "" %>>Pending</option>
                  <option value="Approved" <%= request.eventreqstatus === "Approved" ? "selected" : "" %>>Approved</option>
                  <option value="Completed" <%= request.eventreqstatus === "Completed" ? "selected" : "" %>>Completed</option>
                </select>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button type="submit" class="button edit">Save Changes</button>
    </form>

    <!-- Volunteer Management Section -->
    <h2>Manage Volunteers</h2>
    <table>
      <thead>
        <tr>
          <th>Volunteer ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Sewing Level</th>
          <th>Monthly Hours</th>
          <th>Heard About Opportunity</th>
          <th>Zip Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% volunteers.forEach(function(volunteer) { %>
          <tr>
            <td><%= volunteer.volunteerid %></td>
            <td><%= volunteer.volfirstname %></td>
            <td><%= volunteer.vollastname %></td>
            <td><%= volunteer.phone %></td>
            <td><%= volunteer.email %></td>
            <td><%= volunteer.sewinglevel %></td>
            <td><%= volunteer.monthlyhours %></td>
            <td><%= volunteer.heardaboutopportunity %></td>
            <td><%= volunteer.zipcode %></td>
            <td>
              <!-- Edit Volunteer Button -->
              <a href="/editVolunteer/<%= volunteer.volunteerid %>" class="button edit">Edit</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/volunteer/add'" class="button add">Add New Volunteer</button>
  </div>
</body>

</html>