<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f0f0f0;
      margin: 0;
    }

    .dashboard-container {
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 1200px;
      text-align: center;
      overflow-y: auto;
      max-height: 90vh;
    }

    h1,
    h2 {
      color: #7d8562;
      font-weight: 700;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 1.5rem 0;
      font-size: 0.9rem;
    }

    th,
    td {
      padding: 0.75rem;
      text-align: left;
      border: 1px solid #d0d0d0;
    }

    th {
      background-color: #7d8562;
      color: #ffffff;
    }

    td input {
      width: 100%;
      padding: 0.5rem;
      border: 1px solid #d0d0d0;
      border-radius: 4px;
    }

    td input:focus {
      border-color: #7d8562;
      outline: none;
    }

    .button {
      padding: 0.75rem 1rem;
      font-size: 0.9rem;
      color: #ffffff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .button.edit {
      background-color: #ffc107;
    }

    .button.delete {
      background-color: #dc3545;
    }

    .button.add {
      background-color: #28a745;
      margin-bottom: 1rem;
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <!-- Admin Management Section -->
    <h2>Manage Admins</h2>
    <form action="/admin/update" method="POST">
      <table>
        <thead>
          <tr>
            <th>Admin ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% admins.forEach(function(admin) { %>
            <tr>
              <td>
                <%= admin.adminid %>
              </td>
              <td><input type="text" name="username_<%= admin.adminid %>" value="<%= admin.username %>"></td>
              <td><input type="password" name="password_<%= admin.adminid %>" value="<%= admin.password %>"></td>
              <td><input type="text" name="firstName_<%= admin.adminid %>" value="<%= admin.firstname %>"></td>
              <td><input type="text" name="lastName_<%= admin.adminid %>" value="<%= admin.lastname %>"></td>
              <td><input type="email" name="email_<%= admin.adminid %>" value="<%= admin.email %>"></td>
              <td><input type="text" name="phone_<%= admin.adminid %>" value="<%= admin.phonenumber %>"></td>
              <td>
                <button type="submit" name="action" value="update_<%= admin.adminid %>"
                  class="button edit">Update</button>
                <button type="submit" name="action" value="delete_<%= admin.adminid %>"
                  class="button delete">Delete</button>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </form>
    <button onclick="window.location.href='/admin/add'" class="button add">Add New Admin</button>

    <!-- Event Requests Section -->
    <h2>Event Requests</h2>
    <table>
      <thead>
        <tr>
          <th>Request ID</th>
          <th>Event Date</th>
          <th>Zip Code</th>
          <th>Attendance</th>
          <th>Activity Type</th>
          <th>Contact Name</th>
          <th>Contact Phone</th>
          <th>Jen Story Request</th>
        </tr>
      </thead>
      <tbody>
        <% eventRequests.forEach(function(request) { %>
          <tr>
            <td>
              <%= request.requestid %>
            </td>
            <td>
              <%= request.eventdate %>
            </td>
            <td>
              <%= request.zipcode %>
            </td>
            <td>
              <%= request.roughattendance %>
            </td>
            <td>
              <%= request.activitytype %>
            </td>
            <td>
              <%= request.contactname %>
            </td>
            <td>
              <%= request.contactphone %>
            </td>
            <td>
              <%= request.jenstoryrequest ? "Yes" : "No" %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>