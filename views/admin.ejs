<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <style>
    /* Global Styles */
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .dashboard-container {
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 1200px;
      overflow-y: auto;
      max-height: 90vh;
    }

    h1,
    h2 {
      color: #495057;
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: left;
    }

    /* Table Styles */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
      font-size: 0.85rem;
    }

    th,
    td {
      padding: 0.5rem;
      text-align: left;
      border: 1px solid #e9ecef;
    }

    th {
      background-color: #6c757d;
      color: #ffffff;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    td a {
      color: #007bff;
      text-decoration: none;
    }

    td a:hover {
      text-decoration: underline;
    }

    /* Button Styles (Using Uploaded Color Palette) */
    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .button {
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .button.add {
      background-color: #a3a69a;
      /* Light green-gray */
      color: #ffffff;
    }

    .button.edit {
      background-color: #8f9775;
      /* Medium sage green */
      color: #ffffff;
    }

    .button.delete {
      background-color: #6b8e23;
      /* Olive green */
      color: #ffffff;
    }

    .button.save {
      background-color: #556b2f;
      /* Dark olive green */
      color: #ffffff;
    }

    .button:hover {
      opacity: 0.85;
    }

    .button:focus {
      outline: none;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      table {
        font-size: 0.8rem;
      }

      th,
      td {
        padding: 0.4rem;
      }

      .button {
        font-size: 0.75rem;
      }
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <!-- Admin Management Section -->
    <h2>Manage Admins</h2>
    <table>
      <thead>
        <tr>
          <th>Admin ID</th>
          <th>Name</th>
          <th>Username</th>
          <th>Password</th>
          <th>Contact Info</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% admins.forEach(function(admin) { %>
          <tr>
            <td>
              <%= admin.adminid %>
            </td>
            <td>
              <%= admin.name %>
            </td>
            <td>
              <%= admin.username %>
            </td>
            <td>
              <%= admin.password %>
            </td>
            <td>
              <a href="mailto:<%= admin.email %>">
                <%= admin.email %>
              </a><br>
              <%= admin.phonenumber %>
            </td>
            <td>
              <div class="action-buttons">
                <a href="/editAdmin/<%= admin.adminid %>" class="button edit">Edit</a>
                <form action="/deleteAdmin/<%= admin.adminid %>" method="POST" style="display: inline;">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this admin?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/addAdmin'" class="button add">Add New Admin</button>

    <!-- Volunteer Management Section -->
    <h2>Manage Volunteers</h2>
    <table>
      <thead>
        <tr>
          <th>Volunteer ID</th>
          <th>Name</th>
          <th>Contact Info</th>
          <th>Sewing Level</th>
          <th>Monthly Hours</th>
          <th>Heard About Opportunity</th>
          <th>Zip Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% volunteers.forEach(function(volunteer) { %>
          <tr>
            <td>
              <%= volunteer.volunteerid %>
            </td>
            <td>
              <%= volunteer.name %>
            </td>
            <td>
              <a href="mailto:<%= volunteer.email %>">
                <%= volunteer.email %>
              </a><br>
              <%= volunteer.phone %>
            </td>
            <td>
              <%= volunteer.sewinglevel %>
            </td>
            <td>
              <%= volunteer.monthlyhours %>
            </td>
            <td>
              <%= volunteer.heardaboutopportunity %>
            </td>
            <td>
              <%= volunteer.zipcode %>
            </td>
            <td>
              <div class="action-buttons">
                <a href="/editVolunteer/<%= volunteer.volunteerid %>" class="button edit">Edit</a>
                <form action="/deleteVolunteer/<%= volunteer.volunteerid %>" method="POST" style="display: inline;">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this volunteer?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/volunteer/add'" class="button add">Add New Volunteer</button>

    <!-- Event Requests Section -->
    <h2>Event Requests</h2>
    <form id="eventRequestForm" action="/updateEventStatus" method="POST">
      <table>
        <thead>
          <tr>
            <th>Request ID</th>
            <th>Date</th>
            <th>Attendance</th>
            <th>Type</th>
            <th>Contact</th>
            <th>Address</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% eventRequests.forEach(function(request) { %>
            <tr>
              <td>
                <%= request.requestid %>
              </td>
              <td>
                <%= new Date(request.eventdate).toLocaleDateString() %>
              </td>
              <td>
                <%= request.estimatedattendance %>
              </td>
              <td>
                <%= request.activitytype %>
              </td>
              <td>
                <strong>
                  <%= request.name %>
                </strong><br>
                <a href="mailto:<%= request.contactemail %>">
                  <%= request.contactemail %>
                </a><br>
                <%= request.contactphone %>
              </td>
              <td>
                <%= request.proposedeventaddress %><br>
                  <%= request.city %>, <%= request.state %>
                      <%= request.zipcode %>
              </td>
              <td>
                <select name="status_<%= request.requestid %>">
                  <option value="Pending" <%=request.eventreqstatus==="Pending" ? "selected" : "" %>>Pending</option>
                  <option value="Approved" <%=request.eventreqstatus==="Approved" ? "selected" : "" %>>Approved</option>
                  <option value="Completed" <%=request.eventreqstatus==="Completed" ? "selected" : "" %>>Completed
                  </option>
                </select>
              </td>
              <td>
                <div class="action-buttons">
                  <button type="submit" name="action" value="update_<%= request.requestid %>"
                    class="button save">Save</button>
                  <form action="/deleteEventReq" method="POST" style="display: inline;">
                    <input type="hidden" name="requestid" value="<%= request.requestid %>">
                    <button type="submit" class="button delete"
                      onclick="return confirm('Are you sure you want to delete this event request?')">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </form>

    <!-- Events Section -->
    <h2>Events</h2>
    <table>
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Event Date</th>
          <th>Address</th>
          <th>Zip Code</th>
          <th>City</th>
          <th>State</th>
          <th>Total Participants</th>
          <th>Pockets</th>
          <th>Collars</th>
          <th>Envelopes</th>
          <th>Vests</th>
          <th>Total Items Produced</th> <!-- New Column -->
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(function(event) { %>
          <tr>
            <td>
              <%= event.eventid %>
            </td>
            <td>
              <%= new Date(event.eventdate).toLocaleDateString() %>
            </td>
            <td>
              <%= event.eventaddress %>
            </td>
            <td>
              <%= event.zipcode %>
            </td>
            <td>
              <%= event.city %>
            </td>
            <td>
              <%= event.state %>
            </td>
            <td>
              <%= event.totalparticipants %>
            </td>
            <td>
              <%= event.pockets %>
            </td>
            <td>
              <%= event.collars %>
            </td>
            <td>
              <%= event.envelopes %>
            </td>
            <td>
              <%= event.vests %>
            </td>
            <td>
              <%= event.total_items_produced %>
            </td> <!-- Display Total -->
            <td>
              <%= event.eventstatus %>
            </td>
            <td>
              <div class="action-buttons">
                <a href="/editEvent/<%= event.eventid %>" class="button edit">Edit</a>
                <form action="/deleteEvent" method="POST" style="display: inline;">
                  <input type="hidden" name="eventid" value="<%= event.eventid %>">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
</body>

</html>