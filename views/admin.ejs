<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .dashboard-container {
      background-color: #ffffff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 90%;
      max-width: 1200px;
      overflow-y: auto;
      max-height: 90vh;
    }

    h1,
    h2 {
      color: #495057;
      font-weight: 700;
      margin-bottom: 1rem;
      text-align: left;
    }

    .table-container {
      overflow-x: auto;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 2rem;
      font-size: 0.85rem;
    }

    th,
    td {
      padding: 0.5rem;
      text-align: left;
      vertical-align: middle;
      border: 1px solid #dee2e6;
    }

    th {
      background-color: #495057;
      color: #ffffff;
      text-transform: uppercase;
      font-size: 0.85rem;
    }

    .action-buttons {
      display: flex;
      gap: 0.5rem;
    }

    .button {
      padding: 0.5rem 1rem;
      font-size: 0.85rem;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-align: center;
    }

    .button.add {
      background-color: #28a745;
      color: #ffffff;
      margin-bottom: 1rem;
    }

    .button.edit {
      background-color: #ffc107;
      color: #212529;
    }

    .button.delete {
      background-color: #dc3545;
      color: #ffffff;
    }

    .button.save {
      background-color: #007bff;
      color: #ffffff;
    }

    .button:hover {
      opacity: 0.9;
    }

    select {
      max-width: 100px;
      padding: 0.25rem;
      border: 1px solid #ced4da;
      border-radius: 4px;
      font-size: 0.85rem;
    }

    @media (max-width: 768px) {
      table {
        font-size: 0.8rem;
      }

      th,
      td {
        padding: 0.4rem;
      }

      .action-buttons {
        flex-wrap: wrap;
        gap: 0.25rem;
      }

      .button {
        font-size: 0.75rem;
      }
    }
  </style>
</head>

<body>
  <div class="dashboard-container">
    <h1>Admin Dashboard</h1>

    <!-- Admin Management Section -->
    <h2>Manage Admins</h2>
    <table>
      <thead>
        <tr>
          <th>Admin ID</th>
          <th>Name</th>
          <th>Username</th>
          <th>Password</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% admins.forEach(function(admin) { %>
          <tr>
            <td><%= admin.adminid %></td>
            <td><%= admin.name %></td>
            <td><%= admin.username %></td>
            <td><%= admin.password %></td>
            <td><%= admin.email %></td>
            <td><%= admin.phonenumber %></td>
            <td>
              <div class="action-buttons">
                <a href="/editAdmin/<%= admin.adminid %>" class="button edit">Edit</a>
                <form action="/deleteAdmin/<%= admin.adminid %>" method="POST" style="display: inline;">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this admin?')">Delete</button>
                </form>
                
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/addAdmin'" class="button add">Add New Admin</button>

    <!-- Volunteer Management Section -->
    <h2>Manage Volunteers</h2>
    <table>
      <thead>
        <tr>
          <th>Volunteer ID</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Sewing Level</th>
          <th>Monthly Hours</th>
          <th>Heard About Opportunity</th>
          <th>Zip Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% volunteers.forEach(function(volunteer) { %>
          <tr>
            <td><%= volunteer.volunteerid %></td>
            <td><%= volunteer.name %></td>
            <td><%= volunteer.phone %></td>
            <td><%= volunteer.email %></td>
            <td><%= volunteer.sewinglevel %></td>
            <td><%= volunteer.monthlyhours %></td>
            <td><%= volunteer.heardaboutopportunity %></td>
            <td><%= volunteer.zipcode %></td>
            <td>
              <div class="action-buttons">
                <a href="/editVolunteer/<%= volunteer.volunteerid %>" class="button edit">Edit</a>
                <form action="/deleteVolunteer/<%= volunteer.volunteerid %>" method="POST" style="display: inline;">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this volunteer?')">Delete</button>
                </form>
                
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <button onclick="window.location.href='/volunteer/add'" class="button add">Add New Volunteer</button>

    <!-- Event Requests Section -->
    <h2>Event Requests</h2>
    <div class="table-container">
      <form id="eventRequestForm" action="/updateEventStatus" method="POST">
        <table>
          <thead>
            <tr>
              <th>Request ID</th>
              <th>Date</th>
              <th>Attendance</th>
              <th>Type</th>
              <th>Contact</th>
              <th>Address</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% eventRequests.forEach(function(request) { %>
              <tr>
                <td><%= request.requestid %></td>
                <td><%= new Date(request.eventdate).toLocaleDateString() %></td>
                <td><%= request.estimatedattendance %></td>
                <td><%= request.activitytype %></td>
                <td><%= request.name %></td>
                <td>
                  <div>
                    <strong><%= request.proposedeventaddress %></strong><br>
                    <%= request.city %>, <%= request.state %> <%= request.zipcode %>
                  </div>
                </td>
                <td>
                  <select name="status_<%= request.requestid %>" onchange="handleStatusChange(event, '<%= request.requestid %>')">
                    <option value="Pending" <%= request.eventreqstatus === "Pending" ? "selected" : "" %>>Pending</option>
                    <option value="Approved" <%= request.eventreqstatus === "Approved" ? "selected" : "" %>>Approved</option>
                    <option value="Completed" <%= request.eventreqstatus === "Completed" ? "selected" : "" %>>Completed</option>
                  </select>
                </td>
                <td>
                  <div class="action-buttons">
                    <button type="submit" name="action" value="update_<%= request.requestid %>" class="button save">Save</button>
                    <form action="/deleteEventReq" method="POST" style="display:inline;">
                      <input type="hidden" name="requestid" value="<%= request.requestid %>">
                      <button type="submit" class="button delete"
                        onclick="return confirm('Are you sure you want to delete this event request?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </form>
    </div>

    <!-- Events Section -->
    <h2>Events</h2>
    <table>
      <thead>
        <tr>
          <th>Event ID</th>
          <th>Event Date</th>
          <th>Address</th>
          <th>Zip Code</th>
          <th>City</th>
          <th>State</th>
          <th>Total Participants</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(function(event) { %>
          <tr>
            <td><%= event.eventid %></td>
            <td><%= new Date(event.eventdate).toLocaleDateString() %></td>
            <td><%= event.eventaddress %></td>
            <td><%= event.zipcode %></td>
            <td><%= event.city %></td>
            <td><%= event.state %></td>
            <td><%= event.totalparticipants %></td>
            <td><%= event.eventstatus %></td>
            <td>
              <div class="action-buttons">
                <a href="/editEvent/<%= event.eventid %>" class="button edit">Edit</a>
                <form action="/deleteEvent" method="POST" style="display:inline;">
                  <input type="hidden" name="eventid" value="<%= event.eventid %>">
                  <button type="submit" class="button delete"
                    onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script>
    function handleStatusChange(event, requestId) {
      if (event.target.value === "Completed") {
        const confirmed = confirm(
          "Are you sure you want to mark this event request as completed? This will move it to the events table."
        );
        if (!confirmed) {
          event.target.value = "Pending";
        } else {
          document.getElementById("eventRequestForm").submit();
        }
      }
    }
  </script>
</body>

</html>