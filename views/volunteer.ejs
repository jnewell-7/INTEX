<!DOCTYPE html>
<html>
<head>
    <title>Volunteer Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            color: #7d8562;
            margin-top: 20px;
        }
        form {
            width: 50%;
            margin: 20px auto;
            padding: 25px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #7d8562;
        }
        input, select, button {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }
        input:focus, select:focus {
            border-color: #7d8562;
            outline: none;
            box-shadow: 0 0 5px rgba(125, 133, 98, 0.5);
        }
        button {
            background-color: #7d8562;
            color: white;
            font-size: 16px;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #6d774f;
        }
        .hidden {
            display: none;
        }
    </style>
    <script>
        function toggleOtherInput(value) {
            const otherInput = document.getElementById("other_input_container");
            if (value === "Other") {
                otherInput.classList.remove("hidden");
            } else {
                otherInput.classList.add("hidden");
                document.getElementById("other_input").value = ""; // Clear the input when hidden
            }
        }

        function disableFirstOption(selectElement) {
            // Disable the first option after the dropdown is interacted with
            selectElement.options[0].disabled = true;
        }
    </script>
</head>
<body>
    <h1>Volunteer Form</h1>
    <form action="/submitVolunteerData" method="POST">
        <!-- Volunteer First Name -->
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="first_name" required>

        <!-- Volunteer Last Name -->
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="last_name" required>

        <!-- Phone -->
        <label for="phone">Phone</label>
        <input type="tel" id="phone" name="phone" pattern="^\d{10}$" title="Please enter a valid 10-digit phone number" required>

        <!-- Email -->
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>

        <!-- Sewing Level -->
        <label for="sewing_level">Sewing Level</label>
        <select id="sewing_level" name="sewing_level" required onfocus="disableFirstOption(this)">
            <option value="">Select Sewing Level</option>
            <option value="Beginner">Beginner</option>
            <option value="Intermediate">Intermediate</option>
            <option value="Advanced">Advanced</option>
        </select>

        <!-- Monthly Hours -->
        <label for="monthly_hours">Monthly Hours Available</label>
        <input type="number" id="monthly_hours" name="monthly_hours" min="1" max="200" required>

        <!-- Heard About Opportunity -->
        <label for="heard_about">How Did You Hear About This Opportunity?</label>
        <select id="heard_about" name="heard_about" onchange="toggleOtherInput(this.value)" onfocus="disableFirstOption(this)" required>
            <option value="">Select an Option</option>
            <option value="Social Media">Social Media</option>
            <option value="Friend/Family">Friend/Family</option>
            <option value="Website">Website</option>
            <option value="Other">Other</option>
        </select>

        <!-- Other Input (Hidden by Default) -->
        <div id="other_input_container" class="hidden">
            <label for="other_input">Please Specify</label>
            <input type="text" id="other_input" name="other_input">
        </div>

        <button type="submit">Submit</button>
    </form>
</body>
</html>
