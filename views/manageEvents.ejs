<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Events</title>
    <link rel="stylesheet" href="/css/sb-admin-2.css">
    <link rel="stylesheet" href="/css/admin-styles.css"> <!-- Table-specific styling -->
    <style>
        .turtle-image {
            position: absolute;
            top: -700px; /* Adjust this for vertical positioning */
            right: -30px; /* Adjust this for horizontal positioning */
            width: 960px; /* Adjust the size */
            height: auto; /* Maintain aspect ratio */
            z-index: 0; /* Ensure it appears above other elements */
            opacity: 0.8; 
        }
    </style>
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Turtle Image -->
        <img src="/assets/img/turtleadmin.png" alt="Turtle Admin" class="turtle-image">
        
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Admin Panel</div>
            </a>
            
            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Nav Items -->
            <li class="nav-item active">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Admin Dashboard</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/manageAdmins">
                  <i class="fas fa-users"></i>
                  <span>Admins</span>
                </a>
              </li>
              
              <li class="nav-item">
                <a class="nav-link" href="/manageVolunteers">
                    <i class="fas fa-hands-helping"></i>
                    <span>Volunteers</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/manageEventRequests">
                    <i class="fas fa-hands-helping"></i>
                    <span>Event Requests</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/manageEvents">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Events</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Return to Home -->
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <i class="fas fa-home"></i>
                    <span>Return to Home</span>
                </a>
            </li>
        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                    </ul>
                </nav>
                <!-- End of Topbar -->



                <!-- Events Section -->
                <div class="events-table-container">
                    <h2>Manage Events</h2>
                    <div class="table-container">
                        <table>
                            <thead>
                                <tr>
                                    <th>Event ID</th>
                                    <th>Event Date</th>
                                    <th>Address</th>
                                    <th>Total Participants</th>
                                    <th>Pockets</th>
                                    <th>Collars</th>
                                    <th>Envelopes</th>
                                    <th>Vests</th>
                                    <th>Total Items Produced</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% events.forEach(function(event, index) { %>
                                    <tr>
                                        <td><%= event.eventid %></td>
                                        <td><%= event.eventdate %></td>
                                        <td><%- event.fulladdress %></td>
                                        <td><%= event.totalparticipants %></td>
                                        <td><%= event.pockets %></td>
                                        <td><%= event.collars %></td>
                                        <td><%= event.envelopes %></td>
                                        <td><%= event.vests %></td>
                                        <td><%= event.total_items_produced %></td>
                                        <td><%= event.eventstatus %></td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/editEvent/<%= event.eventid %>" class="button edit">Edit</a>
                                                <form action="/deleteEvent/<%= event.eventid %>" method="POST" style="display: inline;">
                                                    <button type="submit" class="button delete"
                                                        onclick="return confirm('Are you sure you want to delete this event?')">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <!-- Add Event Button -->
                    <button type="button" onclick="window.location.href='/addEvent'" class="button add">Add New Event</button>
                </div>
                

                

                <!-- End of Content -->
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="text-center my-auto">
                        <span>Copyright &copy; Turtle Shelter Project 2024</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
    </div>

    <!-- Scripts -->
    <script src="/path/to/jquery.min.js"></script>
    <script src="/path/to/bootstrap.bundle.min.js"></script>
    <script src="/path/to/sb-admin-2.min.js"></script>
</body>
</html>
